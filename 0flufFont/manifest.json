{
  "manifest_version": 3,
  "name": "0flufFont",
  "version": "2.0.0",
  "description": "Minimalist font override. Performance first.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}